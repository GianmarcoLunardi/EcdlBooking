<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcdlBooking </title>
    <!--
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcdlBooking.styles.css" asp-append-version="true" />
<!-- Classi esempio Bootstrap-->
    <link rel="stylesheet" href="~/css/list-groups.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="User" asp-controller="Studenti" asp-action="Index">EcdlBooking</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="User" asp-controller="Studenti" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!--Inserimento del Menu Esame  -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="bi-sticky"></i> Esame</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Exam"
                                       asp-action="Index">Lista Esami</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Exam"
                                       asp-action="Create">
                                        Aggiungi Esami
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <!-- fine Menu Esame-->

                        <!--Inserimento del Menu Scuola  -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="bi bi-house-fill"></i> Scuole</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" 
                                    asp-area="Admin"
                                    asp-controller="School"
                                    asp-action="Index">Lista Scuole</a></li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="School"
                                    asp-action="Create">
                                       Aggiungi Scuola</a>
                                 </li>

                                 <!-- Inserisci Moduli Degli esami-->
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Modulo"
                                       asp-action="Index">
                                        Gestisci Moduli Esami
                                    </a>
                                </li>
                              
                            </ul>
                        </li>
                        <!-- fine Menu-->
                        <!--Inserimento del Menu Utenti -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="bi-person"></i> Utenti</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Users"
                                       asp-action="Index">Lista Utenti</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="School"
                                       asp-action="Create">
                                        Aggiungi Scuola
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <!-- fine Menu Utenti-->
                        <!-- menù Studenti-->

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="bi-person"></i> Studenti</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="User"
                                       asp-controller="Studenti"
                                       asp-action="PrenotaEsame">
                                       Prenota Esame
                                   </a>



                                    <a class="dropdown-item"
                                       asp-area="User"
                                       asp-controller="Studenti"
                                       asp-action="EsamiSostenuti">
                                        Esami Sostenuti
                                    </a>

                                </li>

                            </ul>
                        </li>

                        <!-- fine menu studenti-->

                        <!--Inserimento del Menu Calendario Degli Esami  -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="bi-sticky"></i> Calendario</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Scheduler"
                                       asp-action="Index">Lista di Tutti Gli Esami</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area="Admin"
                                       asp-controller="Exam"
                                       asp-action="Create">
                                        Aggiungi Esami
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <!-- fine Menu Calendario Degli Esame-->

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EcdlBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <!--
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.min.js" integrity="sha384-RuyvpeZCxMJCqVUGFI0Do1mQrods/hhxYlcVfGPOfQtPJh0JCw12tUAZ/Mv10S7D" crossorigin="anonymous"></script>
	-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
