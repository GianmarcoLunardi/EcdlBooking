@{
    Layout = "_Layout";
}
    @model List<EcdlBooking.Models.Exam>;


    <div class="container">

    <div class="p-3 mb-2 bg-success text-white">
        <h1>
            <i class="bi bi-card-checklist"></i> Pagina Esami
        </h1>

    </div>


        
@if(@Model != null)
{


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Data</th>
                <th scope="col">Ora Inizio</th>
                <th scope="col">Luogo</th>
                <th scope="col">Esaminatore</th>
                <th scope="col">  </th>

        </thead>
        <tbody>
            <!--     sperimentazione     -->
            @foreach (var i in @Model)
            {
                <tr>
                    <th scope="col">@i.Data.ToShortDateString()</th>
                    <th scope="col">@i.Ora.ToString("HH:MM")</th>
                    <th scope="col">@i.School.Name</th>
                    <th scope="col">@i.Esaminatore.Name<br />@i.Esaminatore.Surname</th>
                    <th scope="col">
                        <a type="button" class="btn btn-primary" asp-route="@i.id">Cancella</a>
                        <!--
                        <a type="button" class="btn btn-primary" asp-route="@i.id">Modifica</a>
                        <a type="button" class="btn btn-primary" asp-route="@i.id">Visualizza</a>
                            -->
<th>
                </tr>

            }


        </tbody>
    </table>








}

</div>