@model EcdlBooking.Models.School


<div class="container">

    <p class="fs-2 bg-primary">Inserimento Scuola</p>

    <div class="container">
    <form asp-action="Create_Scool">

            <div class="row g-2" >



                <div class="col-4 g3">
                    <label for="NomeInput" class="col-form-label">Nome</label>

                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="NomeInput"
                           asp-for="@Model.Name" placeholder="Nome">
                </div>




                <div class="col-4">
                    <label for="AddressInput" class="col-form-label">Indirizzo</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="AddressInput"
                           asp-for="@Model.Address" placeholder="Indirizzo">
                </div>

                <div class="col-4">
                    <label for="CittaInput" class="col-form-label">Città</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="CittaInput"
                           asp-for="@Model.City" placeholder="Città">
                </div>

                <div class="col-3">
                    <button class="btn bg-primary" type="submit">Inserisci</button>
                </div>

            </div>

        </form>

    </div>

    </div>


