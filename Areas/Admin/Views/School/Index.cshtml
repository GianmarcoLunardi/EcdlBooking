<div class="container">
    <!-- Content here -->
    <a class="btn btn-danger" role="button" aria-disabled="true" 
       asp-controller="School"
       asp-action="Create">+</a> <p3> kn serimento di una vuoba classe</p3>
    <br />
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col-8">Scuola</th>
                <th scope="col-3">Città</th>
                <th scope="col-1"></th>

            </tr>

        </thead>


        <tbody>
            @if (Model != null) { 

            <!--     sperimentazione     -->
            @foreach (var scuola in @Model)
            {
                <tr>

                    <td scope="col-8">
                        <a asp-area="Admin"
                           asp-controller="School"
                           asp-action="Details"
                           asp-route-id="@scuola.Id">
                            @scuola.Name <br />
                        </a>
                    </td>

                    <td scope="col-3">
                        @scuola.City
                    </td>
                    <td scope="col-1">
                        <!-- Modifica scuola -->
                            <a class="btn btn btn-info btn-sm"
                           role="button" 
                           asp-area="Admin"
                               asp-controller="School"
                           asp-action="Edit"
                           asp-route-id="@scuola.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                            &nbsp

                           <!-- Pulsante Cancella -->
                            <a class="btn btn-danger btn-sm"
                               asp-area="Admin"
							   asp-controller="School"
                               asp-action="Delete"
                               asp-route-id="@scuola.Id.ToString()"
                               role="button"><i class="bi bi-trash3-fill"></i></a>



                    </td>


                </tr>

            }

            }
        </tbody>





    </table>


